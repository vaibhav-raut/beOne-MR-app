<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rectangle_border"
            android:elevation="5dp"
            android:orientation="vertical">

            <!--*********************************************************-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rc_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/rectangle_border_fill100"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Name"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

                <TextView
                    android:id="@+id/rc_account_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border_fill100"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Account No"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />
            </LinearLayout>

            <!--@@@@@@@@@@@@@@@@@@-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rc_name_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/rectangle_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

                <TextView
                    android:id="@+id/rc_account_no_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

            </LinearLayout>

            <!--*********************************************************-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rc_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border_fill50"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Address"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

            </LinearLayout>

            <!--@@@@@@@@@@@@@@@@@@-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rc_address_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

            </LinearLayout>

            <!--@@@@@@@@@@@@@@@@@@-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rc_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border_fill50"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Email"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

                <TextView
                    android:id="@+id/rc_email_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/rectangle_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

            </LinearLayout>

            <!--*********************************************************-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rc_mobile_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border_fill50"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Mobile 1"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

                <TextView
                    android:id="@+id/rc_mobile_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border_fill50"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Mobile 2"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

                <TextView
                    android:id="@+id/rc_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border_fill50"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Phone"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

            </LinearLayout>

            <!--@@@@@@@@@@@@@@@@@@-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rc_mobile_1_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

                <TextView
                    android:id="@+id/rc_mobile_2_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

                <TextView
                    android:id="@+id/rc_phone_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

            </LinearLayout>

            <!--*********************************************************-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rc_joining_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border_fill50"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Joining Date"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

                <TextView
                    android:id="@+id/rc_birth_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border_fill50"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Birth Date"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

                <TextView
                    android:id="@+id/rc_annivarsary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border_fill50"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Annivarsary"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

            </LinearLayout>

            <!--@@@@@@@@@@@@@@@@@@-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rc_joining_date_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

                <TextView
                    android:id="@+id/rc_birth_date_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

                <TextView
                    android:id="@+id/rc_annivarsary_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/data_table_text_size" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>